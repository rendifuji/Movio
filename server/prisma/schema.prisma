generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

enum MovieStatus {
  NOW_SHOWING
  COMING_SOON
}

enum MovieGenre {
  ACTION
  COMEDY
  DRAMA
  HORROR
  ROMANCE
  SCI_FI
  THRILLER
  ANIMATION
  FANTASY
  DOCUMENTARY
}

enum TransactionStatus {
  PENDING
  PAID        
  CANCELLED   
  REFUNDED    
}

enum TicketStatus {
  VALID      
  USED       
  CANCELLED  
  EXPIRED    
}

model User {
  userId    String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  picture   String?
  role      UserRole
  createdAt DateTime @default(now())

  // Relations
  transactions Transaction[]

  @@map("User")
}

model Movie {
  movieId         String      @id @default(uuid())
  title           String
  description     String
  releaseDate     DateTime
  durationMinutes Int
  genre           MovieGenre
  posterUrl       String
  rating          String
  status          MovieStatus
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  schedules Schedule[]

  @@map("Movie")
}

model Cinema {
  cinemaId String @id @default(uuid())
  name     String
  city     String

  // Relations
  studios Studio[]

  @@map("Cinema")
}

model Studio {
  studioId String @id @default(uuid())
  cinemaId String
  name     String
  capacity Int?

  // Relations
  cinema    Cinema     @relation(fields: [cinemaId], references: [cinemaId])
  schedules Schedule[]

  @@map("Studio")
}

model Schedule {
  scheduleId String   @id @default(uuid())
  movieId    String
  studioId   String
  date       DateTime
  startTime  DateTime
  endTime    DateTime
  price      Decimal  @db.Decimal(10, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  movie   Movie    @relation(fields: [movieId], references: [movieId])
  studio  Studio   @relation(fields: [studioId], references: [studioId])
  tickets Ticket[]

  @@map("Schedule")
}

model Transaction {
  transactionId String            @id @default(uuid())
  userId        String
  totalAmount   Decimal           @db.Decimal(10, 2)
  status        TransactionStatus
  createdAt     DateTime          @default(now())

  // Relations
  user    User     @relation(fields: [userId], references: [userId])
  tickets Ticket[]

  @@map("Transaction")
}

model Ticket {
  ticketId      String       @id @default(uuid())
  transactionId String
  scheduleId    String
  seatLabel     String
  qrCode        String       @unique
  status        TicketStatus

  // Relations
  transaction Transaction @relation(fields: [transactionId], references: [transactionId])
  schedule    Schedule    @relation(fields: [scheduleId], references: [scheduleId])

  @@map("Ticket")
}
